<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/silver_style">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/hostel" />


        <EditText
            android:id="@+id/editText1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:hint="Email Address"
            android:drawableTint="@color/tabs"
            android:textSize="15dp"
            android:padding="10dp"
            android:width="300dp"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="5dp"
            android:background="@drawable/textbox"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="40dp"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:padding="10dp"
            android:width="300dp"
           android:drawableLeft="@drawable/ic_action_lock"
            android:hint="Password"
            android:drawableTint="@color/tabs"
            android:drawablePadding="5dp"
            android:background="@drawable/textbox"
            android:layout_below="@+id/editText1"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="237dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/editText2"
            android:text="Forgot Password"
            android:textColor="@color/blue"/>


        <TextView
            android:id="@+id/signupTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="New User?Click here"
            android:textColor="@color/blue"
             />


                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="LOGIN"
                    android:theme="@style/Button"
                    android:layout_below="@+id/forgot"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_style"
                    android:layout_centerInParent="true"/>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>