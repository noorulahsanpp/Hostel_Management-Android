            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of present  :"
                android:theme="@style/TextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of absents  :"
