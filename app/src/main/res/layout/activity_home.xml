        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="600dp"
            android:drawableTop="@drawable/ic_action_profile"
            android:background="@android:color/transparent"
            android:text="Logout"
            tools:visibility="visible" />


        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="270dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/fees"
                android:layout_width="120dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/maroon"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_action_fees"
                    android:tint="#FFFFFF" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="70dp"
                android:text="fees"
                android:textColor="#000000"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="270dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/attendance"
                android:layout_width="120dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/maroon"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:src="@drawable/ic_action_attendance"
                    android:tint="#FFFFFF" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:text="attendance"
                android:textColor="#000"
                android:textSize="20sp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/sick"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="250dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="60dp"
                android:text="sick"
                android:textColor="@color/tabs"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="70dp"
                android:layout_marginLeft="20dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_action_sick"
                android:tint="@color/tabs"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/menu"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="60dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="60dp"
                android:text="menu"
                android:textColor="@color/tabs"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-10dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_action_menu"
                android:tint="@color/tabs"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/messout"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="150dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="60dp"
                android:text="messout"
                android:textColor="@color/tabs"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-15dp"
                android:src="@drawable/ic_action_messout"
                android:tint="@color/tabs"/>


        </androidx.cardview.widget.CardView>
