<?xml version="1.0" encoding="UTF-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Home"
    >


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_top_tabs" />

        </RelativeLayout>


        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/relLayout1"
            android:autoStart="true"
            android:flipInterval="2000">

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/layout_center_viewpage" />


            </RelativeLayout>
        </ViewFlipper>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/relLayout1" />

        <include layout="@layout/layout_bottom_navigation_view" />


        <!--Button android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="360dp"
                android:text="Attendance"
                android:drawableTop="@drawable/ic_action_attendance"
                android:background="@android:color/transparent"
                android:textSize="14sp" />

            <Button android:id="@+id/button7"
                android:layout_width="123dp"
                android:layout_height="76dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="360dp"
                android:drawableTop="@drawable/ic_action_fees"
                android:background="@android:color/transparent"
                android:text="Fees" />

            <Button
                android:id="@+id/button8"
                android:layout_width="121dp"
                android:layout_height="74dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="460dp"
                android:drawableTop="@drawable/ic_action_messout"
                android:background="@android:color/transparent"
                android:text="Messout" />

            <Button android:id="@+id/btnmenu"
                android:layout_width="123dp"
                android:layout_height="74dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="560dp"
                android:drawableTop= "@drawable/ic_action_menu"
                android:background="@android:color/transparent"
                android:text="Menu" />

            <Button
                android:id="@+id/button9"
                android:layout_width="122dp"
                android:layout_height="72dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="460dp"
                android:drawableTop= "@drawable/ic_action_sick"
                android:background="@android:color/transparent"
                android:text="Sick" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="40sp" />

            !-->



        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="600dp"
            android:drawableTop="@drawable/ic_action_profile"
            android:background="@android:color/transparent"
            android:text="Logout"
            tools:visibility="visible" />


        <androidx.cardview.widget.CardView
            android:id="@+id/fees"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="60dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="90dp"
                android:text="fees"
                android:textColor="@color/maroon"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_action_fees" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/attendance"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="250dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:text="attendance"
                android:textColor="@color/maroon"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_action_attendance" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sick"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="250dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="90dp"
                android:text="sick"
                android:textColor="@color/maroon"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_action_sick" />


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/menu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="60dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="90dp"
                android:text="menu"
                android:textColor="@color/maroon"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_action_menu" />


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/messout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="150dp"
            android:background="@color/maroon"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:text="messout"
                android:textColor="@color/maroon"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_action_messout" />


        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>