<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightsilver"
    tools:context=".Messout">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/adamina"
        android:text="Messout"
        android:textColor="@color/maroon"
        android:textSize="40sp"
        android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:background="@drawable/textbox"
            android:backgroundTint="@color/lightsilver">
            <include layout="@layout/layout_center_viewpage" />




            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="240dp"
                android:theme="@style/TextView"
                android:text="Total Number Of Days  "
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edittext13"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/textView12"
                android:layout_marginTop="225dp"
                android:text=""
                android:theme="@style/EditText"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="300dp"
                android:background="@drawable/button_style"
                android:text="OK"
                android:theme="@style/Button" />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="60dp"
                android:text="From  "
                android:textStyle="bold"
                android:theme="@style/TextView"/>
            <TextView
                android:id="@+id/txtfrom"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/from"
                android:layout_marginTop="100dp"
                android:background="@drawable/textbox"
                android:textAlignment="center"
                android:drawableRight="@drawable/ic_action_calender"
               android:drawableTint="@color/tabs"
                android:inputType="none"
                android:theme="@style/EditText"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/to"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="60dp"
                android:text="To    "
                android:textStyle="bold"
                android:theme="@style/TextView"/>

            <TextView
                android:id="@+id/txtto"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/to"
                android:layout_marginTop="170dp"
                android:textAlignment="center"
                android:background="@drawable/textbox"
                android:drawableTint="@color/tabs"
                android:drawableRight="@drawable/ic_action_calender"
                android:inputType="none"
                android:theme="@style/EditText"
                android:gravity="center_horizontal" />

            <include layout="@layout/layout_bottom_navigation_view" />


        </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>