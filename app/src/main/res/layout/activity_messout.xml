<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Messout">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/silver_style">


        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/relLayout1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="200dp"
            android:background="@color/lightsilver">
            <include layout="@layout/layout_center_viewpage" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="170dp"
                android:text="Total Number Of Days"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edittext13"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="155dp"
                android:text=""
                android:theme="@style/EditText" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="230dp"
                android:background="@drawable/button_style"
                android:text="OK"
                android:theme="@style/Button" />

            <EditText
                android:id="@+id/button10"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:inputType="date"
                android:theme="@style/EditText"
                android:background="@drawable/textbox"
                android:hint="From"
                android:drawableRight="@drawable/ic_action_calender"
                android:text="" />

            <EditText
                android:id="@+id/button11"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:inputType="date"
                android:theme="@style/EditText"
                android:background="@drawable/textbox"
                android:hint="To"
                android:drawableRight="@drawable/ic_action_calender"
                android:text="" />


        </RelativeLayout>


        <include layout="@layout/layout_bottom_navigation_view" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            android:text="Messout"
            android:textColor="@color/maroon"
            android:textSize="40sp" />


    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>