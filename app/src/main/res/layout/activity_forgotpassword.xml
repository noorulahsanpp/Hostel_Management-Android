<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forgot"
           />

        <TextView
            android:layout_marginTop="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Forgot Password?"
            android:textSize="17dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="350dp"
            android:layout_marginTop="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#605D5D"
            android:gravity="center"
            android:text="Please enter your registered email address we will get back to you with the reset password link"/>

        <EditText
            android:id="@+id/emailEt"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="10dp"
            android:layout_marginTop="240dp"
            android:hint="Enter email"
            android:inputType="textPersonName"
            android:background="@drawable/edittextborder"
            android:theme="@style/EditText" />

        <Button
            android:id="@+id/sendpswd"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="270dp"
            android:textSize="15dp"
            android:padding="10dp"
            android:background="@drawable/edittextborder"
            android:backgroundTint="@color/tabs"
            android:textColor="@color/headings"
            android:text=" Send" />


    </RelativeLayout>

</LinearLayout>